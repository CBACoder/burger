<div class="row" id="burgerc">
    <h1>Eat-Da-Burger!</h1>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Burgers ready to Devoure</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Burgers that have been Devoured</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger_name" required>
        </div>

        <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Cook it!<br>
            <input type="radio" name="devoured" value="0"> Devoured
        </div>

        <button type="submit">Add a Burger</button>
    </form>
</div>